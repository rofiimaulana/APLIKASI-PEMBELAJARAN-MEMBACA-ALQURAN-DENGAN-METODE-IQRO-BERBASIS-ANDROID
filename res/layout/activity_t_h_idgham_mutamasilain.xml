<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".t_h_idgham_mutamasilain">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:text="    Idgham Mutamatsilain" />
        <TextView
            android:textAppearance="?android:textAppearanceMedium"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Idgham Mutamatsilain adalah pertemuan huruf mati / bersukun dengan huruf yang sama yang berharakat misalkan: بَ dan بْ" />
        <TextView
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:text="Pengecualiana pada pertemuan - pertemuan huruf berikut ini :" />
        <TextView
            android:textAppearance="?android:textAppearanceMedium"
            android:background="@color/Abu"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="mim(م) sukun dan mim(م) berharakat : - Idgham Mislan (dengung);" />
        <TextView
            android:textAppearance="?android:textAppearanceMedium"
            android:background="@color/white"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="nun ( ن) sukun dan nun ( ن) berharakat: " />
        <TextView
            android:textAppearance="?android:textAppearanceMedium"
            android:background="@color/white"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="- Idgaham bi ghunnah (dengung)" />
        <TextView
            android:textAppearance="?android:textAppearanceMedium"
            android:background="@color/Abu"
            android:layout_width="fill_parent"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:text=" huruf-huruf mad (ا و ي) " />
        <TextView
            android:textAppearance="?android:textAppearanceMedium"
            android:background="@color/Abu"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- di baca panjang sebagaimana mestinya (hukum mad)." />
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ffffffff"
                android:background="@color/colorPrimary"
                android:padding="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="   Contoh - contoh idgham mutamatsilain:" />
            <ImageView
                android:layout_gravity="right"
                android:id="@id/imageView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/idghammutamatsilain" />
            <LinearLayout
                android:orientation="vertical"
                android:background="@color/colorPrimary"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="10dp">
                <TextView
                    android:textAppearance="?android:textAppearanceLarge"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="AUDIO"
                    android:textAlignment="center" />
                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Play"
                        android:onClick="play"
                        tools:ignore="OnClick" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pause"
                        android:onClick="pause"
                        tools:ignore="OnClick" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>